{
  "name": "resume",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "cp node_modules/pdfjs-dist/build/pdf.worker.min.mjs public/pdf.worker.min.mjs && astro dev",
    "build": "cp node_modules/pdfjs-dist/build/pdf.worker.min.mjs public/pdf.worker.min.mjs && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "resume:fonts": "bash ./scripts/install-resume-fonts.sh",
    "resume:build": "npm run resume:fonts && make -C latex build"
  },
  "dependencies": {
    "astro": "^5.17.1",
    "pdfjs-dist": "^5.4.624"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "devDependencies": {
    "sirv-cli": "^3.0.1"
  }
}